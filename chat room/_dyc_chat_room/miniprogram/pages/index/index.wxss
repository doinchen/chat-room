button,view,input,image{
  margin: 0;
  padding: 0;
}
.container{
  width: 100%;
  height: 100vh;
  background-color:white;
}
.avatar_user{
  width: 150rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.floatBtn{
  position: fixed;
  top:50rpx;
  right: 50rpx;
}
.left-card-head{

  /* background-color: chocolate; */
  height: 70rpx;
}
.right-card-head{
  /* background-color: cyan; */
  height: 70rpx;

}
.right-img{
  overflow: hidden;
  float: right;
  height: 70rpx;
  /* background-color: darkkhaki; */
}
.right-title{
  height: 35rpx;
  float: right;
}
.right-card-body{
  position: relative;
  top: -25rpx;
  width: 70%;
  min-height: 40rpx;
  margin: 0 auto;
  /* background-color:darkolivegreen; */
  white-space: normal;
  word-wrap: break-word;
  text-align: right;

}
.right-text{
  
  display: inline-block;
  text-align: left;
  border-radius: 10rpx;
  width: fit-content;
  padding: 15rpx;
  max-width: 94.9%;
  background-color: white;
  min-height: 38rpx;
}

.head{
  width: 710rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color:burlywood;
  border-radius: 20rpx;
}
.left-img{
  overflow: hidden;
  float: left;
  /* background-color: darkmagenta; */
  height: 70rpx;
}
.left-title{
  height: 35rpx;
  float: left;
}

.card-body{
  position: relative;
  top: -25rpx;
  /* background-color: cornflowerblue;  */
  width: 70%;
  margin: 0 auto ;
  white-space: normal;
  overflow: hidden;

  word-wrap: break-word;
}
.card-body .left-text{
  display: inline-block;
  width: auto;
  padding: 15rpx;
  max-width: 100%;
  background-color:white;
  min-height: 38rpx;
  border-radius: 10rpx;
}
.avatar{
  width: 70rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.title{
  display: flex;
  flex-direction: column;
}
.nickName{
  font-size: 25rpx;
  margin: 0 10rpx;
}
.address{
  font-size: 30rpx;
  color: gray;
  margin: 0 10rpx;
}
.chatroom{
  margin: 10rpx 0 0 0;
  width:100%;

  background-color: #EAEAEA;
  /* background-color: burlywood; */
}
.lit_body{
  width: 100%;
  height: 955rpx;
  /* background-color: cadetblue; */


}
.message-sender{
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #F5F5F3;
  height: 75rpx;

}

.message-sender-input{
  background-color: white;
  width:75%;
  height: 55rpx;
  margin: 10rpx 10rpx 10rpx 40rpx;
}
.send-btn{
  display: block;
  width:15% !important;
  height: 55rpx;
  text-align: center;
  margin: 10rpx 0 10rpx 0;
  

}
.send-btn text{
  
  display: inline-block;
  line-height: 55rpx;

  
}
.world{
  padding: 15rpx;
  font-size: 30rpx;
  background-color: #EAEAEA;
  border-radius: 30rpx;
  width: 60%;
  text-align: center;
  margin: 15rpx;
  
}
.nav{
  background-color: #EAEAEA;
  width: 100%;
  margin: 20rpx 0 20rpx 0;
}
.room{
  display: flex;
  flex-direction: row;
  margin: 15rpx;
  
}
.room button{
  height: 55rpx;
  line-height: 55rpx;

}
.join{
  display: flex;
  flex-direction: row;
  margin: 15rpx;

  justify-content: space-around;

}
.join input{
  background-color: white;
  border-radius: 10rpx;
  height: 55rpx;
  width: 60%;
}
.join button{
  height: 55rpx;
  line-height: 55rpx;
  margin: 0 15rpx 0 15rpx;

}
