button{
  margin: 0;
  padding: 0;
}
.container{
  width: 100%;
  height: 100vh;
  background-color: #333;
}.avatar-wrapper{
  width: 150rpx !important;
  height: 150rpx;
  margin: 0 20rpx;
}
.avatar{
  margin: 0 auto;
  width: 150rpx;
}
.input{
  width: 100%;
  margin: 20rpx 0 0 0;
  border-top: 1rpx solid #C1C1C1;
  border-bottom: 1rpx solid #C1C1C1;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 20rpx 0;
}
.input text{
  display: block;
  margin: 0 30rpx;
}
.weui-input{
  margin: 0 0 0 100rpx;
}